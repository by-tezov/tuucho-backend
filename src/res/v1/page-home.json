{
  "root": {
    "id": "page-home",
    "subset": "layout-linear",
    "style": {
      "orientation": "vertical"
    },
    "content": {
      "items": [
        {
          "id": "*title-content"
        },
        {
          "id": "*item-spacer-h"
        },
        {
          "id": "*item-spacer"
        },
        {
          "id": "body-label",
          "subset": "label",
          "style": {
            "font-size": { "id": "*font:body" },
            "font-color": { "id": "*red" }
          },
          "content": {
            "value": { "default": "some text on home page" }
          }
        },
        {
          "id": "*item-spacer"
        },
        {
          "id": "input-name-a",
          "subset": "field",
          "style": {},
          "option": {
            "validator": [
              {
                "type": "min-length",
                "length": "4",
                "id-message": "input-name-a-min-length"
              },
              {
                "type": "max-length",
                "length": "8",
                "id-message": "input-name-a-max-length"
              },
              {
                "type": "min-digit-length",
                "length": "1",
                "id-message": "input-name-a-min-digit-length"
              }
            ]
          },
          "content": {
            "title": { "default": "title input" },
            "placeholder": { "default": "placeholder input" },
            "message-error": [
              { "id": {"value":"input-name-a-min-length", "source":"text-title-home-2"} },
              { "id": "input-name-a-max-length", "default":"hello" },
              { "id": "*text-title-home-2"},
              { "id": "input-name-a-min-digit-length", "default":"hello 2"},
              "just to try"
            ]
          }
        },
        {
          "id": "*item-spacer"
        },
        {
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal"
          },
          "content": {
            "items": [
              {
                "id": "*item-spacer-v"
              },
              {
                "subset": "button",
                "style": { "id": "*main-button" },
                "content": {
                  "label": {
                    "style": { "id": "*label-main-button-1" },
                    "content": { "value": "Send and \nGo Credit page" }
                  },
                  "action": {
                    "value": "send-form://url/form-from-page-home",
                    "params": {
                      "action-validated": "navigate://url/page-credit"
                    }
                  }
                }
              },
              {
                "id": "*item-spacer-v",
                "style": {
                  "weight": "1.0"
                }
              },
              {
                "subset": "button",
                "style": {
                  "id": "*main-button"
                },
                "content": {
                  "label": {
                    "style": { "id": "*label-main-button-2" },
                    "content": {
                      "value": { "default": "Template page" }
                    }
                  },
                  "action": "navigate://url/page-template"
                }
              },
              {
                "id": "*item-spacer-v"
              }
            ]
          }
        }
      ]
    }
  },
  "components": [
    {
      "id": "title-content",
      "subset": "label",
      "style": {
        "id": "*title-label"
      },
      "content": {
        "value": { "id": "*text-title-home" }
      }
    }
  ],
  "texts": {
    "common": {
      "text-title-home-2": "some text on home page"
    }
  }
}
