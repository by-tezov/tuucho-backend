{
  "setting": {
    "time-to-live": {
      "strategy": "transient",
      "transient-value": "10s"
    }
  },
  "root": {
    "setting": {
      "navigation": {
        "definitions": {
          "option": {
            "clear-stack": true,
            "single": true
          },
          "transition": "fade"
        }
      }
    },
    "subset": "layout-linear",
    "style": {
      "orientation": "vertical",
      "background-color": "*background@gray-light",
      "fill-max-size": true
    },
    "content": {
      "items": [
        {
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal",
            "background-color": "*background@funny-color",
            "fill-max-width": true
          },
          "content": {
            "items": [
              "*item-spacer",
              "*small-logo"
            ]
          }
        },
        "*item-spacer",
        {
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal",
            "fill-max-width": true
          },
          "content": {
            "items": [
              "*item-spacer",
              "*main-logo",
              "*item-spacer"
            ]
          }
        },
        "*item-spacer",
        {
          "subset": "label",
          "style": "*title-section",
          "content": {
            "value": "*credentials-title"
          }
        },
        "*item-spacer-24-v",
        {
          "id": "input-field-login",
          "subset": "form-field",
          "option": {
            "form-validators": "string-not-null"
          },
          "content": {
            "title": "Login",
            "placeholder": "login",
            "message-errors": "can not be null"
          }
        },
        {
          "id": "input-field-password",
          "subset": "form-field",
          "option": {
            "form-validators": "string-not-null"
          },
          "content": {
            "title": "Password",
            "placeholder": "password",
            "message-errors": "can not be null"
          }
        },
        "*item-spacer",
        {
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal",
            "background-color": "*background@funny-color",
            "fill-max-width": true
          },
          "content": {
            "items": [
              "*item-spacer",
              {
                "subset": "button",
                "content": {
                  "label": {
                    "style": "*label-main-button-default",
                    "content": {
                      "value": "Connection"
                    }
                  },
                  "action": "*button@confirm"
                }
              },
              "*item-spacer"
            ]
          }
        }
      ]
    }
  },
  "components": [
    {
      "id": "item-spacer",
      "subset": "spacer",
      "style": {
        "weight": "1.0"
      }
    },
    {
      "id": "item-spacer-24-v",
      "subset": "spacer",
      "style": {
        "height": "*padding@spacer-24"
      }
    },
    {
      "id": "item-spacer-half",
      "subset": "spacer",
      "style": {
        "weight": "0.2"
      }
    },
    {
      "id": "main-logo",
      "subset": "image",
      "style": {
        "width": "196",
        "height": "196",
        "shape": "rounded-square",
        "padding": "6",
        "alpha": "0.85",
        "background-color": "*background@funny-color"
      },
      "content": {
        "values": ["*main-logo", "*main-logo-placeholder" ],
        "description": "Main-Logo"
      }
    },
    {
      "id": "small-logo",
      "subset": "image",
      "style": {
        "width": "48",
        "height": "48",
        "shape": "rounded",
        "padding": "3",
        "background-color": "*background@funny-color"
      },
      "content": {
        "values": "*small-logo",
        "description": "Small-Logo"
      }
    }
  ],
  "styles": {
    "common": {
      "title-section": {
        "font-size": "18",
        "font-color": "*red"
      },
      "label-main-button-default": {
        "font-size": {
          "id": "*font@button"
        },
        "font-color": "*blue"
      }
    }
  },
  "colors": {
    "common": {
      "red": "#FFFF0000",
      "blue": "#FF0000FF"
    },
    "background": {
      "gray-light": "#FFD9D9D9",
      "funny-color": "#FF66D9FF"
    }
  },
  "dimensions": {
    "font": {
      "button": "16"
    },
    "padding": {
      "spacer-24": "24"
    }
  },
  "actions": {
    "button": {
      "confirm": {
        "primaries": "form://send-url/form-from-page-login",
        "validated": "navigate://url/auth/page-home"
      }
    }
  },
  "images": {
    "common": {
      "main-logo": "remote://lobby/logo-compose-wrong-url",
      "main-logo-placeholder": {
        "source": "local://img/logo-compose-placeholder",
        "tags": "placeholder"
      },
      "small-logo": "local://img/logo-koin"
    }
  },
  "texts": {
    "common": {
      "credentials-title": {
        "id": "*credentials-request"
      }
    }
  }
}
