{
  "root": {
    "id": "template-page-default",
    "subset": "layout-linear",
    "style": {
      "orientation": "vertical",
      "background-color": {
        "id": "*background@why-not-color"
      },
      "fill-max-size": true
    },
    "content": {
      "items": [
        {
          "subset": "label",
          "style": "*label@title",
          "content": {
            "id": "*title-content"
          }
        },
        {
          "id": "*spacer@full"
        },
        {
          "subset": "label",
          "style": {
            "font-size": "32",
            "font-color": "*text@black"
          },
          "content": {
            "id": "*body-content"
          }
        },
        "*spacer@full",
        {
          "subset": "button",
          "content": {
            "id": "*action-content"
          }
        }
      ]
    }
  }
}
