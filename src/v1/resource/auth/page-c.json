{
  "root": {
    "setting": {
      "shadower": {
        "navigate-forward": {
          "wait-done-to-render": true,
          "enable": true
        }
      },
      "navigation": {
        "definitions": {
          "option": {
            "single": true
          },
          "transition": {
            "type": "slide-horizontal",
            "entrance": "from-end",
            "effect": "cover"
          }
        }
      }
    },
    "subset": "layout-linear",
    "style": {
      "orientation": "vertical",
      "background-color": "*background@minty-green",
      "fill-max-size": true
    },
    "content": {
      "items": [
        {
          "subset": "label",
          "style": "*label@title",
          "content": {
            "value": "*title"
          }
        },
        "*spacer@full",
        {
          "subset": "label",
          "style": "*label@body",
          "content": {
            "value": "*body"
          }
        },
        "*spacer@half",
        {
          "subset": "label",
          "style": "*title-body",
          "content": {
            "value": "*title-body"
          }
        },
        "*spacer@full",
        {
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal",
            "background-color": "*background@funny-color",
            "fill-max-width": true
          },
          "content": {
            "items": [
              {
                "subset": "button",
                "content": {
                  "label": {
                    "style": {
                      "id": "*label@button-previous"
                    },
                    "content": {
                      "value": "*back"
                    }
                  },
                  "action": "*back"
                }
              },
              "*spacer@full",
              {
                "subset": "button",
                "content": {
                  "label": {
                    "style": {
                      "id": "*label@button"
                    },
                    "content": {
                      "value": "*page-a"
                    }
                  },
                  "action": "*page-a"
                }
              },
              "*spacer@full",
              {
                "subset": "button",
                "content": {
                  "label": {
                    "style": "*label@button-next",
                    "content": {
                      "value": "*next"
                    }
                  },
                  "action": "*next"
                }
              }
            ]
          }
        }
      ]
    }
  },
  "texts": {
    "common": {
      "back": "back",
      "page-a": "Page-A",
      "next": "next",
      "title": "Page-C",
      "body": "TLL infinite \n\n- nav stack single \n\n- transition horizontal from end cover effect \n\n- contextual forward wait to render"
    }
  },
  "actions": {
    "common": {
      "back": "navigate://local-destination/back",
      "page-a": "navigate://url/auth/page-a",
      "next": "navigate://url/auth/page-d"
    }
  }
}
